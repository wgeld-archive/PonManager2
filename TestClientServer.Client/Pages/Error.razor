@page "/error"
@inject NavigationManager NavigationManager
@layout MainLayout 
<h3>Error</h3>
<div class="container mt-4">
    <div class="alert alert-danger">
        <strong>Error!</strong> There was a problem processing your request. Please try again later.
    </div>
    <div class="mt-3">
        <a href="/" class="btn btn-primary">Return Home</a> 
        <button class="btn btn-secondary" @onclick="Retry">Retry</button>
    </div>
</div>

@code {
    // If needed, add logic to handle retry or other actions
    void Retry()
    {
        NavigationManager.NavigateTo("/", forceLoad: true); // Adjust as necessary
    }
}