@page "/"
@inject NavigationManager NavigationManager

<PageTitle>Login</PageTitle>

<div class="login-container">
    <h3 class="login-header">Login</h3>

    <EditForm Model="@_loginModel" OnValidSubmit="HandleLogin" class="login-form">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="username">Username</label>
            <InputText id="username" class="form-control" @bind-Value="_loginModel.Username" />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <InputText id="password" type="password" class="form-control" @bind-Value="_loginModel.Password" />
        </div>
        <button type="submit" class="button-64"><span>Submit</span></button>

        @if (_loginFailed)
        {
        <div class="alert alert-danger" role="alert">
            Invalid username or password.
        </div>
        }
    </EditForm>
</div>

@code {
    private readonly LoginModel _loginModel = new();
    private bool _loginFailed;

    private void HandleLogin()
    {
        const string presetUsername = "wcfapp";
        const string presetPassword = "wcfappdev";

        if (_loginModel.Username == presetUsername && _loginModel.Password == presetPassword)
        {
            _loginFailed = false;
            NavigationManager.NavigateTo("/PonTag");
        }
    else
        {
            _loginFailed = true;
        }
}

    public class LoginModel
    {
        public string Username { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}

